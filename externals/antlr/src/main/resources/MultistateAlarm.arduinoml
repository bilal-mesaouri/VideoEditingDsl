application multistateAlarm

# Declaring bricks
sensor button: 9
actuator led: 12
actuator buzzer: 11

# Declaring states
firstpush {
    led <= LOW
    buzzer <= HIGH
    button is HIGH => secondpush
}

secondpush {
    led <= HIGH
    buzzer <= LOW
    button is HIGH => off
}

off {
    led <= LOW
    buzzer <= LOW
    button is HIGH => firstpush
}